# Backend API Configuration
# Base URL for the backend API (without trailing slash)
VITE_API_BASE_URL=http://localhost:5001

# Application Settings
# Name of the application
VITE_APP_NAME=Stock Monitor
# Version of the application
VITE_APP_VERSION=1.0.0

# Feature Flags
# Enable debug mode (shows configuration in console)
VITE_DEBUG_MODE=false
# Enable system logs component
VITE_ENABLE_SYSTEM_LOGS=true

# Performance Settings
# Maximum number of reconnection attempts for SSE
VITE_MAX_RECONNECT_ATTEMPTS=5
# Initial delay before reconnection (in milliseconds)
VITE_INITIAL_RECONNECT_DELAY=1000
# Multiplier for exponential backoff on reconnection
VITE_RECONNECT_BACKOFF_MULTIPLIER=2
# Size of chart data buffer (in seconds)
VITE_CHART_DATA_BUFFER_SIZE=60
# Target FPS for rendering throttling
VITE_RENDERING_THROTTLE_FPS=60

# Environment-specific examples:

# Development
# VITE_API_BASE_URL=http://localhost:5001
# VITE_DEBUG_MODE=true

# Staging
# VITE_API_BASE_URL=https://staging-api.example.com
# VITE_DEBUG_MODE=false

# Production
# VITE_API_BASE_URL=https://api.example.com
# VITE_DEBUG_MODE=false